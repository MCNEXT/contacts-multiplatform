<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactsXamarin.Views.DetailsPage" Title="Contact detail">
  <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
    <Image Source="{Binding Person.ImageSource}" Aspect="AspectFill" />
    <Label Text="{Binding Person.FullName}" VerticalOptions="Center" HorizontalOptions="Center" />
  </StackLayout>
</ContentPage>